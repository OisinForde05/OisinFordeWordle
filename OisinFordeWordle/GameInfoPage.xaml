<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OisinFordeWordle.GameInfoPage"
             Title="Game Info"
             BackgroundColor="#121213">
    <StackLayout Padding="20">
        <Label Text="Game Rules"
               FontSize="32"
               TextColor="White"
               HorizontalOptions="Center"/>

        <Label Text="1. Guess the 5-letter word in 6 attempts."
               FontSize="20"
               TextColor="White"/>

        <Label Text="2. Green = correct letter and position."
               FontSize="20"
               TextColor="White"/>

        <Label Text="3. Yellow = correct letter, wrong position."
               FontSize="20"
               TextColor="White"/>

        <Label Text="4. Gray = letter not in the word."
               FontSize="20"
               TextColor="White"/>
    </StackLayout>
</ContentPage>
